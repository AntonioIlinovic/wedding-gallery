# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=weddinggallery.site,www.weddinggallery.site,backend
CSRF_TRUSTED_ORIGINS=https://weddinggallery.site,https://www.weddinggallery.site

# Superuser Creation
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password-here

# AWS S3 Configuration (Production)
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=eu-central-1
# Optional: If using a CDN like CloudFront, specify the custom domain here.
# This should be the full domain name, e.g., cdn.your-domain.com
# Leave blank if not using a custom domain.
AWS_S3_CUSTOM_DOMAIN=https://s3.eu...
USE_MINIO=False
AWS_ACCESS_KEY_ID=AKI...
AWS_SECRET_ACCESS_KEY=qsx...

# Frontend Configuration
FRONTEND_BASE_URL=https://weddinggallery.site

# Primary Event Configuration
# Use these variables to define a stable event that can be recreated
# deterministically after a deployment or infrastructure failure.
# The access token should be a long, random, and secret string.
PRIMARY_EVENT_CODE=main-event
PRIMARY_EVENT_ACCESS_TOKEN=generate-a-super-long-and-secret-token-for-production